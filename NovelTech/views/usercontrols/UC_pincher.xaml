<UserControl x:Class="NovelTech.views.usercontrols.UC_pincher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovelTech.views.usercontrols"
             mc:Ignorable="d"
             HorizontalAlignment="Center" VerticalAlignment="Center"
             RenderTransformOrigin="0.5, 0.5" ClipToBounds="False">
    <!--#region Render Transform-->
    <UserControl.RenderTransform>
        <TransformGroup>
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform Angle="0"/>
            <TranslateTransform/>
        </TransformGroup>
    </UserControl.RenderTransform>
    <!--#endregion-->
    
    <Grid HorizontalAlignment="Center">
        <Ellipse x:Name="e_pincher" HorizontalAlignment="Center" Height="37.5" Stroke="Black" VerticalAlignment="Center" Width="37.5" Loaded="Pincher_Loaded"/>

    </Grid>
</UserControl>