<Window x:Class="NovelTech.libraries.ui.popups.Popup_question"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NovelTech.libraries.ui.popups"
        mc:Ignorable="d"
        Title="Popup_question" Height="154" Width="392">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="l_quest" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontStyle="Italic"/>
        <TextBox x:Name="tb_answer" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" FontSize="16" Grid.ColumnSpan="2"/>
        <Button x:Name="b_ok" Content="OK" HorizontalAlignment="Right" Margin="0,69,5,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Width="100" Height="40" Click="b_ok_Click"/>
        <Button x:Name="b_cancel" Content="Cancel" HorizontalAlignment="Left" Margin="5,69,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Width="100" Height="40" Grid.Column="1" Click="b_cancel_Click"/>

    </Grid>
</Window>
